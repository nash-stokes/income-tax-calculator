@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>Income Tax Calculator</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        rel="stylesheet"/>
    <style>
        .wireframe-box {
            border: 1px solid #ccc;
            padding: 1rem;
            margin-top: 2rem;
            border-radius: 4px;
        }

        .label-wide {
            width: 200px;
        }
    </style>
</head>
<body class="container">
<h1 class="mt-5">Income Tax Calculator</h1>

<form method="post" class="wireframe-box">
    <div class="row align-items-center mb-3">
        <label class="col-auto label-wide">Gross Annual Salary:</label>
        <div class="col">
            <input asp-for="GrossSalary"
                   class="form-control"
                   type="number"
                   step="0.01"/>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Calc</button>
        </div>
    </div>
</form>

@if (Model.Result != null)
{
    <div class="wireframe-box">
        <dl class="row">
            <dt class="col-sm-4">Gross Annual Salary:</dt>
            <dd class="col-sm-8">@Model.Result.GrossAnnual</dd>

            <dt class="col-sm-4">Gross Monthly Salary:</dt>
            <dd class="col-sm-8">@Model.Result.GrossMonthly</dd>

            <dt class="col-sm-4">Net Annual Salary:</dt>
            <dd class="col-sm-8">@Model.Result.NetAnnual</dd>

            <dt class="col-sm-4">Net Monthly Salary:</dt>
            <dd class="col-sm-8">@Model.Result.NetMonthly</dd>

            <dt class="col-sm-4">Annual Tax Paid:</dt>
            <dd class="col-sm-8">@Model.Result.AnnualTax</dd>

            <dt class="col-sm-4">Monthly Tax Paid:</dt>
            <dd class="col-sm-8">@Model.Result.MonthlyTax</dd>
        </dl>
    </div>
}
</body>
</html>